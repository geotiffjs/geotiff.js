{
  "include": ["src/**/*.ts"],
  "compilerOptions": {
    "outDir": "dist-module",
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "module": "ES2020",

    "moduleResolution": "node",
    "esModuleInterop": false,
    "downlevelIteration": true,
    "skipLibCheck": true,
    "allowJs": true,

    "declaration": true,
    "declarationMap": true,
    // we didn't have this before, but maybe we want it
    // "sourceMap": true,

    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
    // these aren't available until TS 5.6+
    //"erasableSyntaxOnly": true,
    //"noUncheckedSideEffectImports": true
  }
}
