{
  "include": ["./dist-module/**/*.js"],
  "compilerOptions": {
    "outDir": "./dist-node",
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "commonjs",

    "moduleResolution": "node",
    "esModuleInterop": true,
    "downlevelIteration": true,
    "skipLibCheck": true,
    "allowJs": true,
    "importHelpers": false,

    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "inlineSources": false,

    "strict": false,
    "strictNullChecks": true
  }
}
