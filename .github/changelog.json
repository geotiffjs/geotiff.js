{
  "categories": [
    {
      "title": "## Breaking",
      "labels": ["breaking"]
    },
    {
      "title": "## Features",
      "labels": ["feature", "enhancement"]
    },
    {
      "title": "## Fixes",
      "labels": ["fix", "bugfix"],
      "exclude_labels": ["dependencies", "ci", "build"]
    },
    {
      "title": "## Documentation",
      "labels": ["documentation", "docs"],
      "exclude_labels": ["feature", "enhancement", "fix", "bugfix"]
    },
    {
      "title": "## Infrastructure",
      "labels": ["dependencies", "maintenance", "ci", "build"]
    },
    {
      "title": "## Uncategorized",
      "labels": []
    }
  ],
  "ignore_labels": ["ignore", "ci-ignore"],
  "template": "#{{CHANGELOG}}",
  "pr_template": "- #{{TITLE}} (##{{NUMBER}} by @#{{AUTHOR}})"
}
