{
  "compilerOptions": {
    "outDir": "dist-module",
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "ES2021.WeakRef"],
    "module": "ES2020",
    "allowJs": true,
    "checkJs": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "importHelpers": false,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "esModuleInterop": false,
    "inlineSources": false,
    "downlevelIteration": true,
  },
  "include": [
    "./src/**/*.js",
    "./src/**/*.ts"
  ]
}
