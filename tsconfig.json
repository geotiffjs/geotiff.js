{
  "include": ["src/**/*.ts", "src/**/*.js"],
  "compilerOptions": {
    "outDir": "dist-module",
    "target": "ES5", // "ES2020",
    "lib": ["ES2020", "DOM"],
    "module": "ES2020",

    "moduleResolution": "node",
    "esModuleInterop": false,
    "downlevelIteration": true,
    "skipLibCheck": true,
    "allowJs": true,
    "importHelpers": false,

    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "inlineSources": false,

    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
    // these aren't available until TS 5.6+
    //"erasableSyntaxOnly": true,
    //"noUncheckedSideEffectImports": true
  }
}
