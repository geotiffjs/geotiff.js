{
  "compilerOptions": {
    "target": "ES5",
    "lib": ["ES2020", "DOM", "ES2021.WeakRef"],
    "module": "ES2020",
    "allowJs": true,
    "checkJs": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "emitDeclarationOnly": true,
    "importHelpers": false,
    "strict": false,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "esModuleInterop": false,
    "inlineSources": false,
    "downlevelIteration": true
  },
  "include": [
    "./src/**/*.js"
  ]
}
