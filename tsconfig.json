{
  "files": [],
  "compilerOptions": {
    "target": "ES2020",

    "moduleResolution": "node",
    "downlevelIteration": true,
    "skipLibCheck": true,
    "allowJs": true,
    "importHelpers": false,

    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "inlineSources": false,

    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
    // these aren't available until TS 5.6+
    //"erasableSyntaxOnly": true,
    //"noUncheckedSideEffectImports": true
  },
  "references": [
    { "path": "./tsconfig.module.json" },
    { "path": "./tsconfig.node.json" }
  ]
}
